<% if @status[:status] == 'success'%>
var url = window.location.href;
if (url == "<%= root_url %>"){
  $("#stock-modal").modal("hide");
  $('<%= ".stock-button-#{@status[:id]}" %>').text("stock");
}else if (url == "<%= stock_subjects_url %>"){
  $('<%= ".table-data-#{@status[:id]}" %>').remove();
  $('<%= ".schedule-data-#{@status[:id]}" %>').remove();
}
<%  elsif @status[:status] == 'fail' %>
alert('error!');
<% end %>
